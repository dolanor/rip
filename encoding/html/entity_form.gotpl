{{ define "entity" }}
<html>
	<head>
		<meta charset="UTF-8">
		<script src="https://unpkg.com/htmx.org@1.8.6"></script>
	</head>
	<body>
		<h2 id="entity-name"><a href="../{{ .EntityName | toLower | toPlural }}">{{ .EntityName }}</a></h2>
		{{ range $k, $v := .Entities }}
			{{ $method := "put" }}
			{{ if eq .ID 0 }}
				{{ $method = "post" }}
		<form class="entity" id="entity-{{ .ID }}" method="{{ $method }}" target="/{{ .Name | toLower | toPlural}}/">
			{{ else }}
		<form class="entity" id="entity-{{ .ID }}" hx-{{ $method }}="/{{ .Name | toLower | toPlural}}/{{ .ID }}" hx-headers='{"Accept": "text/html"}' hx-target="this" hx-select=".entity" hx-swap="outerHTML">
			{{ end }}
			{{- range $f := $v.Fields }}
				{{ if ne $f.Key "ID" }}
					{{ if ne ($f.Value | toString) "0" }}
			<div >
				<label>{{ $f.Key }}</label>:
				<input type="text" name="{{ $f.Key }}" value="{{ $f.Value }}">
			</div>
					{{ end }}
				{{ else }}
					{{ if ne ($f.Value | toString) "0" }}
			<a href="{{ $f.Value }}"><div><label>{{ $f.Key }}</label>: {{ $f.Value }}</div></a>
				<input type="hidden" name="{{ $f.Key }}" value="{{ $f.Value }}">
					{{ end }}
				{{ end }}
			{{- end }}

			<button class="btn btn-primary">Submit</button>
			<button hx-get="/{{ .Name | toLower | toPlural}}/{{ .ID }}" hx-headers='{"Accept": "text/html"}' class="btn">Cancel</button>
		</form>
		{{ end }}
	</body>
</html>
{{ end }}
